<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
    </style>

    <style name="title_style">
        <item name="android:textSize">@dimen/title_text_size</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">end</item>
        <item name="android:textColor">@color/text_color</item>
    </style>

    <style name="subtitle_style">
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">end</item>
        <item name="android:textSize">@dimen/subtitle_text_size</item>
        <item name="android:textColor">@color/text_color</item>
    </style>

    <style name="root_layout_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">64dp</item>
        <item name="android:paddingLeft">@dimen/root_layout_padding</item>
        <item name="android:paddingRight">@dimen/root_layout_padding</item>
    </style>

</resources>
